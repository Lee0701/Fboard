<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fboard" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
        <item name="dialogCornerRadius">28dp</item>
    </style>

    <style name="Theme.Fboard.Keyboard">
        <item name="background">@color/keyboard_bg_dark</item>
        <!--        <item name="backgroundTint">@color/keyboard_bg_dark</item>-->
    </style>

    <style name="Theme.Fboard.Keyboard.Key">
        <item name="android:textSize">@dimen/key_text_size</item>
        <item name="android:textColor">@color/key_fg_dark</item>
        <item name="marginHorizontal">@dimen/key_margin_horizontal</item>
        <item name="marginVertical">@dimen/key_margin_vertical</item>
        <item name="background">@drawable/key_bg</item>
        <item name="backgroundTint">@color/key_bg_static_dark</item>
        <item name="iconTint">@color/key_fg_dark</item>
    </style>

    <style name="Theme.Fboard.Keyboard.Key.Mod" parent="Theme.Fboard.Keyboard.Key">
        <item name="backgroundTint">@color/key_bg_static_dark_mod</item>
    </style>

    <style name="Theme.Fboard.Keyboard.Key.Return" parent="Theme.Fboard.Keyboard.Key">
        <item name="backgroundTint">@color/key_bg_static_dark_return</item>
        <item name="iconTint">@color/key_fg_dark_return</item>
    </style>

    <style name="Theme.Fboard.Keyboard.KeyPopup">
        <item name="android:textSize">@dimen/key_popup_text_size</item>
        <item name="android:textColor">@color/key_fg_dark</item>
        <item name="background">@drawable/key_popup_bg</item>
        <item name="backgroundTint">@color/key_bg_static_dark</item>
        <item name="iconTint">@color/key_fg_dark</item>
    </style>

    <style name="Theme.Fboard.Candidates">
        <item name="android:background">@color/keyboard_bg_dark</item>
    </style>

    <style name="Theme.Fboard.Candidates.Item">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textSize">@dimen/candidates_text_size</item>
    </style>

    <style name="Theme.Fboard.PreferenceCategory" parent="Preference.Category">
        <item name="titleTextAppearance">@style/Theme.Fboard.PreferenceCategory.Title</item>
    </style>

    <style name="Theme.Fboard.Preference" parent="Preference">
        <item name="titleTextAppearance">@style/Theme.Fboard.Preference.Title</item>
        <item name="summaryTextAppearance">@style/Theme.Fboard.Preference.Summary</item>
    </style>

    <style name="Theme.Fboard.PreferenceCategory.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Fboard.Preference.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Fboard.Preference.Summary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_200</item>
    </style>

    <style name="Theme.Fboard.KeyboardLayoutSettings">
        <item name="imageButtonStyle">@style/Theme.Fboard.KeyboardLayoutSettings.ImageButton</item>
    </style>

    <style name="Theme.Fboard.KeyboardLayoutSettings.ImageButton">
        <item name="tint">@color/black</item>
        <item name="android:layout_width">@dimen/icon_button_width</item>
        <item name="android:layout_height">@dimen/icon_button_height</item>
    </style>

</resources>